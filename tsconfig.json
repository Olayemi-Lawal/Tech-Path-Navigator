{
  "compilerOptions": {
    "target": "ESNext",                       // Modern JS output
    "module": "ESNext",                       // ES modules for Vite
    "moduleResolution": "Node",               // Required for path aliases
    "baseUrl": "src",                         // Enables path aliases
    "paths": {
      "@/*": ["./*"]                          // Alias @/ -> src/*
    },
    "jsx": "react-jsx",                       // Required for React 17+ JSX transform
    "allowJs": true,                          // Allow JS files
    "skipLibCheck": true,                     // Skip type checking in node_modules
    "noImplicitAny": false,                   // Allow implicit any (for flexibility)
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "esModuleInterop": true,                  // Needed for interop with CommonJS modules
    "forceConsistentCasingInFileNames": true  // Avoid path case mismatches (esp. on Linux)
  },
  "include": ["src"],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}

